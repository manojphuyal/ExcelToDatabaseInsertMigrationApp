@page
@using Microsoft.AspNetCore.Mvc.Localization
@using FileApp.Localization
@using Volo.Abp.Users
@model FileApp.Web.Pages.CqNovelImport.ReferenceImport.AttendanceModel
@inject IHtmlLocalizer<FileAppResource> L
@inject ICurrentUser CurrentUser
@section styles {
    <abp-style src="/Pages/Index.css" />
}
@section scripts {
    <abp-script src="/Pages/Index.js" />

}

<div class="container">
    <div class="p-5 text-center">
        <div class="badge badge-success h5 rounded mb-4 " role="alert">
            <h5 class="m-1"> <i class="fas fa-rocket"></i> Upload, <strong>Excel File :</strong> insert into database table!</h5>
        </div>

        <div class="shadow-lg mb-5 bg-white rounded card">
            <div class="card-header h4 text-white bg-primary" style="text-align: left; font-weight: bold;">
                <i class="fa fa-file-excel-o" aria-hidden="true" style="margin-right:20px"></i>
                <i class="fa fa-long-arrow-right" aria-hidden="true" style="margin-right:20px"></i>
                <i class="fa fa-database" aria-hidden="true" style="margin-right:20px;"></i>|

                Attendance
            </div>
                <form method="post" enctype="multipart/form-data">
                    <div class="row" style="margin:10%">
                        <div class="col-7">
                            <div class="input-group my-3">
                                <input type="file" class="form-control" asp-for="ExcelFile">
                            </div>
                        </div>
                        <div class="col-5">
                            <div class="input-group my-3">
                                <button type="submit" class="btn btn-outline-primary">Upload Excel File</button>
                            </div>
                        </div>
                    </div>

                    @{ if (Model.Code == "1")
                        {
            <div class="alert alert-success" role="alert">
                @Model.Message
                Here1
            </div> }
        else if (Model.Code == "0")
        {
        <div class="alert alert-danger" role="alert">
            @Model.Message
            Here2
        </div> }
    else
    {
        {
        <div class="alert alert-danger" role="alert" hidden>
            @Model.Message
        </div> }
} }



                </form>
            </div>



    </div>
</div>
